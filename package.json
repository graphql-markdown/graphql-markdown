  "scripts": {
    "build": "npm run clean && npm run compile",
    "check": "node ./scripts/dep-checks.js",
    "clean": "tsc --build --clean && npm run clean -ws --if-present",
    "compile": "tsc --build",
    "docs:api:all": "npm run docs --workspaces --if-present",
    "docs:api": "sh ./scripts/docs-api.sh",
    "knip": "knip",
    "lint": "eslint \"packages/*/{src,tests}/**.{ts,js,json,gql}\"",
    "prepare": "husky | true",
    "prettier": "prettier \"packages/*/{src,tests,assets}/**/*.{ts,js,json,md,gql}\"",
    "test:ci": "jest --config=./config/jest.config.js --runInBand --passWithNoTests --ci --silent --randomize",
    "test:watch": "jest --config=./config/jest.config.js --watch --maxWorkers=25%",
    "test": "jest --config=./config/jest.config.js --maxWorkers=50% --randomize",
    "ts:check": "tsc --noEmit",
    "typedoc": "typedoc"
  },
  "prettier": "./config/.prettierrc.js",
  "eslintConfig": {
    "extends": [
      "./config/.eslintrc.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "issues",
        "breaking"
      ],
      "types": [
        {
          "emoji": "‚ú®",
          "code": ":sparkles:",
          "description": "Add a new feature.",
          "name": "feat"
        },
        {
          "emoji": "üêõ",
          "code": ":bug:",
          "description": "Fix a bug.",
          "name": "fix"
        },
        {
          "emoji": "üì¶Ô∏è",
          "code": ":package:",
          "description": "Update dependencies.",
          "name": "build"
        },
        {
          "emoji": "üîß",
          "code": ":wrench:",
          "description": "Update configuration files.",
          "name": "conf"
        },
        {
          "emoji": "‚ôªÔ∏è",
          "code": ":recycle:",
          "description": "Refactor code.",
          "name": "refactor"
        },
        {
          "emoji": "üß™",
          "code": ":test_tube:",
          "description": "Update tests.",
          "name": "test"
        },
        {
          "emoji": "üë∑",
          "code": ":construction_worker:",
          "description": "Update CI.",
          "name": "ci"
        },
        {
          "emoji": "üìù",
          "code": ":memo:",
          "description": "Update documentation.",
          "name": "docs"
        },
        {
          "emoji": "üîñ",
          "code": ":bookmark:",
          "description": "Add a tag / release.",
          "name": "tag"
        },
        {
          "emoji": "üßë‚Äçüíª",
          "code": ":technologist:",
          "description": "Other changes.",
          "name": "other"
        }
      ]
    }
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@graphql-tools/graphql-file-loader": "8.1.2",
    "@graphql-tools/json-file-loader": "8.0.20",
    "@stryker-mutator/api": "9.2.0",
    "@stryker-mutator/core": "9.2.0",
