  "scripts": {
    "build:all": "turbo build",
    "clean:all": "bun run --if-present --workspaces clean",
    "docs:api:all": "bun run --if-present --workspaces docs",
    "docs:api": "sh ./scripts/docs-api.sh",
    "knip": "knip",
    "lint": "eslint --config config/eslint.config.ts \"packages/*/{src,tests}/**.{ts,js,json,gql}\"",
    "lint:fix": "eslint --config config/eslint.config.ts \"packages/*/{src,tests}/**.{ts,js,json,gql}\" --fix",
    "prepare": "node ./scripts/prepare-husky.js",
    "prettier": "prettier \"packages/*/{src,tests,assets}/**/*.{ts,js,json,md,gql}\" --check",
    "prettier:fix": "prettier \"packages/*/{src,tests,assets}/**/*.{ts,js,json,md,gql}\" --write",
    "test": "jest --config=./config/jest.config.js --maxWorkers=50% --randomize --detectOpenHandles",
    "test:dev": "jest --config=./config/jest.unit.config.js --maxWorkers=50% --bail --onlyChanged",
    "test:unit": "jest --config=./config/jest.unit.config.js --maxWorkers=50% --randomize",
    "test:integration": "jest --config=./config/jest.integration.config.js --maxWorkers=25% --randomize",
    "test:ci": "jest --config=./config/jest.config.js --runInBand --passWithNoTests --ci --silent --randomize",
    "test:watch": "jest --config=./config/jest.unit.config.js --watch --maxWorkers=25% --bail --onlyChanged",
    "ts:check": "tsgo --noEmit",
    "typedoc": "typedoc",
    "stryker": "bun run --if-present --workspaces stryker --allowEmpty --reporters progress,html"
  },
  "prettier": "./config/.prettierrc.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "issues",
        "breaking"
      ],
      "types": [
        {
          "emoji": "‚ú®",
          "code": ":sparkles:",
          "description": "Add a new feature.",
          "name": "feat"
        },
        {
          "emoji": "üêõ",
          "code": ":bug:",
          "description": "Fix a bug.",
          "name": "fix"
        },
        {
          "emoji": "üì¶Ô∏è",
          "code": ":package:",
          "description": "Update dependencies.",
          "name": "build"
        },
        {
          "emoji": "üîß",
          "code": ":wrench:",
          "description": "Update configuration files.",
          "name": "conf"
        },
        {
          "emoji": "‚ôªÔ∏è",
          "code": ":recycle:",
          "description": "Refactor code.",
          "name": "refactor"
        },
        {
          "emoji": "üß™",
          "code": ":test_tube:",
          "description": "Update tests.",
          "name": "test"
        },
        {
          "emoji": "üë∑",
          "code": ":construction_worker:",
          "description": "Update CI.",
          "name": "ci"
        },
        {
          "emoji": "üìù",
          "code": ":memo:",
          "description": "Update documentation.",
          "name": "docs"
        },
        {
          "emoji": "üîñ",
          "code": ":bookmark:",
          "description": "Add a tag / release.",
          "name": "tag"
        },
        {
          "emoji": "üßë‚Äçüíª",
          "code": ":technologist:",
          "description": "Other changes.",
          "name": "other"
        }
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@graphql-tools/graphql-file-loader": "8.1.9",
    "@graphql-tools/json-file-loader": "8.0.26",
    "@stryker-mutator/api": "9.5.1",
    "@stryker-mutator/core": "9.5.1",
    "@stryker-mutator/jest-runner": "9.5.1",
    "@stryker-mutator/typescript-checker": "9.5.1",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.3",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "commitizen": "4.3.1",
    "cz-emoji": "1.3.1",
    "diff": "8.0.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.15.0",
    "eslint-plugin-jsonc": "2.21.1",
    "eslint-plugin-mdx": "3.6.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-tsdoc": "0.5.0",
    "globals": "17.3.0",
    "graphql": "16.12.0",
    "graphql-config": "5.1.5",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-environment-node": "30.2.0",
    "jsonc-eslint-parser": "2.4.2",
    "knip": "5.83.1",
    "lodash.filter": "4.6.0",
    "memfs": "4.56.10",
    "prettier": "3.8.1",
    "ts-jest": "29.4.6",
    "tsgo-dev": "^2025.12.2",
    "turbo": "2.8.9",
    "typedoc": "0.28.17",
    "typedoc-docusaurus-theme":"1.4.2",
    "typedoc-plugin-frontmatter": "1.3.1",
    "typedoc-plugin-markdown": "4.10.0",
    "unionfs": "4.6.0"
  }
}
