#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Exit early if not in interactive mode (CI/CD environments)
if [ ! -t 0 ]; then
  exit 0
fi

# Only run if /dev/tty exists (interactive terminal)
if [ -e /dev/tty ]; then
  # Your prepare-commit-msg logic here
  echo "Running prepare-commit-msg hook"
else
  echo "Skipping prepare-commit-msg hook - not in interactive mode"
  exit 0
fi

