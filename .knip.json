{
  "workspaces": {
    ".": {
      "entry": ["scripts/*.js", "dangerfile.js", "config/*.js", "commitlint.config.js"],
      "project": ["{config,scripts}/**/*.js", "commitlint.config.js"]
    },
    "packages/*": {
      "project": ["**/*.ts!"],
      "ignore": ["**/__mocks__/**/*.ts"]
    },
    "packages/core": {
      "ignore": ["**/__mocks__/**/*.ts"],
      "ignoreDependencies": [
        "@graphql-markdown/diff",
        "@graphql-markdown/printer-legacy",
        "graphql-config"
      ]
    },
    "packages/utils": {
      "project": ["**/*.ts!"],
      "ignore": ["**/__mocks__/**/*.ts"],
      "ignoreDependencies": ["prettier"]
    },
    "packages/cli": {
      "project": ["**/*.ts!"],
      "ignore": ["**/__mocks__/**/*.ts"]
    },
    "packages/docusaurus": {
      "project": ["**/*.ts!"],
      "ignore": ["**/__mocks__/**/*.ts"]
    }
  },
  "rules": {
    "enumMembers": "warn"
  },
  "ignoreDependencies": [
    "danger",
    "commitizen",
    "cz-emoji",
    "husky",
    "pinst",
    "@changesets/cli",
    "@changesets/changelog-github",
    "@commitlint/cli",
    "@commitlint/config-conventional",
    "@docusaurus/logger",
    "jest-environment-node"
  ],
  "ignoreExportsUsedInFile": true,
  "jest": {
    "config": ["config/jest.config.js"],
    "entry": ["**/tests/**/*.ts"]
  },
  "eslint": {
    "config": ["config/.eslintrc.js"]
  }
}
